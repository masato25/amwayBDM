= javascript_include_tag 'apps/detail_new', 'data-turbolinks-track': 'reload'
= render 'shared/layout'
    div class="page-header"
      h3 建立產品頁面
      = link_to '回上頁', action: "index"
    = render 'shared/notice'
    = form_for @detail do |f|
      div class="form-group" id="detail-form"
        = f.label "BrandName"        
        b-select2 :options="brands" v-model="selected_brand" v-model.lazy="selected_brand"
          option value="0" disabled="" 請選擇
      div class="form-group"
        = f.label :SeriesId
        select class="form-control" id="sel1" name="series_id"
          option value="0" disabled="" 請選擇
          option v-for="option in series" v-bind:value="option.id"  {{ option.text }} 
      div class="form-group"
        = f.label :DetailName
        = f.text_field :DetailName, class: 'form-control'
      div class="form-group" 
        = f.label :Feature
        = f.text_field :Feature, class: 'form-control'
      div class="form-group" 
        = f.label :HealthyFeature
        = f.text_field :HealthyFeature, class: 'form-control'
      div class="form-group" 
        = f.label :HealthyTip
        = f.text_field :HealthyTip, class: 'form-control'
      div class="form-group" 
        = f.label :SNColor
        = f.text_field :SNColor, class: 'form-control'
      = f.submit '儲存', class: 'btn btn-primary' 
